<UserControl x:Class="LowLevelDesign.DebuggerHelpbelt.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0">
            <TextBlock Margin="10" HorizontalAlignment="Center">Debugger HelpBelt</TextBlock>
            <Button Content="Just My Code" Click="btnJustMyCode_Click" Height="30" Name="btnJustMyCode" Margin="18,5,18,5"/>
            <Button Content="Microsoft Symbol Servers" Click="btnNetFrameworkSource_Click" Height="30" x:Name="btnNetFrameworkSource" Margin="18,5,18,5" />
            <Button Content="dotPeek Symbol Server" Click="btnDotPeekSymbolServer_Click" Height="30" x:Name="btnDotPeekSymbolServer" Margin="18,5,18,5" />
            <Button Content="Empty symbol cache" Click="btnEmptyCache_Click" Height="30" x:Name="btnEmptyCache" Margin="18,5,18,5" />
        </StackPanel>
    </Grid>
</UserControl>
